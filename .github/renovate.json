{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "docker:pinDigests"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^docker-compose\\.ya?ml$/", "/^Dockerfile$/"],
      "matchStrings": [
        "image:\\s*netboxcommunity/netbox:v(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "FROM\\s+netboxcommunity/netbox:v(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "netboxcommunity/netbox",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": [".github/workflows/**"],
      "pinDigests": false
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["netboxcommunity/netbox"],
      "versioning": "semver",
      "allowedVersions": "<4.4.0"
    },
    {
      "description": "Automerge patch level updates",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Automerge digest updates",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Automerge some GitHub Actions (Lint/Prettier/Scanner)",
      "matchFileNames": [".github/workflows/**"],
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr",
      "matchPackagePatterns": [
        ".*codespell.*",
        ".*lint.*",
        ".*dockle.*",
        ".*trivy.*",
        ".*anchore.*"
      ]
    }
  ]
}
